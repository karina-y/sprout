{
  "compilerOptions": {
	"target": "es2020",
	"module": "commonjs",
	"allowJs": true,
	"lib": ["es2020", "dom"],
	"jsx": "react",
	"incremental": true,
	"sourceMap": true,
	"noEmit": true,
	"strict": true,
	"moduleResolution": "node",
	"esModuleInterop": true,
	"preserveSymlinks": true,
	"downlevelIteration": true,
	"experimentalDecorators": true,
	"importHelpers": true,
	"allowImportingTsExtensions": true,
	"baseUrl": ".",
	"rootDir": ".",
	"typeRoots": [
	  "imports/utils/types"
	],
	"types": [
	  "@types/jest",
	  "@types/node",
	  "@types/react",
	  "@types/meteor"
	],
	"paths": {
	  "meteor/*": [
		"node_modules/@types/meteor/*",
		".meteor/local/types/packages.d.ts"
	  ],
	  "@api": ["imports/api"],
	  "@api/*": ["imports/api/*"],
	  "@component": ["imports/ui/components"],
	  "@component/*": ["imports/ui/components/*"],
	  "@hook": ["imports/ui/hooks"],
	  "@hook/*": ["imports/ui/hooks/*"],
	  "@page": ["imports/ui/pages"],
	  "@page/*": ["imports/ui/pages/*"],
	  "@style": ["imports/ui/stylesheets"],
	  "@style/*": ["imports/ui/stylesheets/*"],
	  "@constant": ["imports/utils/constants"],
	  "@constant/*": ["imports/utils/constants/*"],
	  "@helper": ["imports/utils/helpers"],
	  "@helper/*": ["imports/utils/helpers/*"],
	  "@model": ["imports/utils/models"],
	  "@model/*": ["imports/utils/models/*"],
	  "@enum": ["imports/utils/enums"],
	  "@enum/*": ["imports/utils/enums/*"],
	  "@type": ["imports/utils/types"],
	  "@type/*": ["imports/utils/types/*"]
	}
  },
  "exclude": [
	"node_modules",
	"./.meteor/**",
	"./packages/**"
  ],
  "include": ["**/*.ts", "**/*.tsx"]
}
